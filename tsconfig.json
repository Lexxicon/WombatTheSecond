{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noEmitOnError": true,
    "strict": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist/js/"
  },
  "compileOnSave": false,
  "files": [
    "lib/WombatPOSIS/dist/index.d.ts",
    "lib/screeps-typed/dist/screeps-typed.d.ts",
    "lib/traveler/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts",
    "test/**/*..dts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
