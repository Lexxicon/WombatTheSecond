{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noEmitOnError": true,
    "strict": true,
    "sourceMap": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "outDir": "./dist/js/"
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts",
    "test/**/*..dts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
