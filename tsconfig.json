{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noEmitOnError": true,
    "strict": true,
    "sourceMap": false,
    "baseUrl": "./src/",
    "outDir": "./dist/js/"
  },
  "compileOnSave": false,
  "files": [
    "lib/posis/dist/index.d.ts",
    "lib/screeps-typed/dist/screeps-typed.d.ts",
    "lib/traveler/index.d.ts"
  ],
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/snippets"
  ]
}
